                    <p class="resimYazisi @item.Film_Dil"><text>@item.Film_Kurdele</text></p>
                    <p class="imdb @item.Film_Dil"><text>IMDb <br />@item.Film_Puan</text></p>
                    <a href="@item.Film_Referans"><img width="100%" height="315px" src="@item.Film_Resim" /></a>
                </div>
            </div>
        </div>
    }
</div>

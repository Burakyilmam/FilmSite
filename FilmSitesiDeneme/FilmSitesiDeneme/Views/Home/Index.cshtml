<div style="margin-left:150px;">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="col-7 col-lg-2 col-md-3 text-center mr-3 mt-3 mb-3 pt-3" style="float:left;height:350px;background-color:rgba(128, 128, 128, 0.3);position:relative;overflow:hidden;">
